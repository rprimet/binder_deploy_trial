{
    "layer": [
        {
            "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
            "description": "Conversation timeline",
            "data": {
                "url": "https://s3-eu-west-1.amazonaws.com/pspea/conv1_processed.tsv",
                "format": {
                    "type": "tsv"
                }
            },
            "mark": "bar",
            "encoding": {
                "y": {
                    "field": "ID",
                    "type": "nominal"
                },
                "x": {
                    "field": "Start",
                    "type": "quantitative"
                },
                "x2": {
                    "field": "End",
                    "type": "quantitative"
                },
                "color": {
                    "field": "Gender",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                            "F",
                            "M"
                        ],
                        "range": [
                            "#ff99ff",
                            "#4169e1"
                        ]
                    }
                }
            }
        },
        {
            "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
            "description": "Tape head",
            "data": {
                "values": [
                    {
                        "timepos": 42
                    }
                ]
            },
            "mark": "rule",
            "encoding": {
                "x": {
                    "field": "timepos",
                    "type": "quantitative"
                },
                "size": {
                    "value": 2
                },
                "color": {
                    "value": "#22aa12"
                }
            }
        }
    ]
}
